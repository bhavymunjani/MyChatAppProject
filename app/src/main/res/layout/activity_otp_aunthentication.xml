<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OtpAunthenticationActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mychatapplogo"
        android:layout_marginTop="40dp"
        android:id="@+id/logo">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:fontFamily="@font/raleway"
        android:text="Enter the OTP which you recieved. "
        android:textStyle="bold"
        android:textColor="#6e6e6e"
        android:textSize="20sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:id="@+id/textheading">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textheading"
        android:hint="Enter your OTP here.."
        android:id="@+id/getotp"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getotp"
        android:text="Don't recieved? change your number."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:id="@+id/changenumber">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/changenumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="verify otp"
        android:id="@+id/verifyotp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="@color/white"
        android:background="#25d366">
    </Button>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verifyotp"
        android:id="@+id/progerssbarbuttonofotpauthencation"
        android:visibility="invisible"
        android:layout_marginTop="30dp"></ProgressBar>

  </RelativeLayout>